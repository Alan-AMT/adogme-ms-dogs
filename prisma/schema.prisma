generator client {
  provider = "prisma-client"
  output   = "../src/infrastructure/prisma/generated"
}

datasource db {
  provider = "postgresql"
  schemas  = ["dogs_service"]
}

model Dog {
  id        String @id // @default(uuid())
  name      String
  breed     String
  age       Int
  shelterId String

  createdAt DateTime // @default(now())
  updatedAt DateTime // @updatedAt

  @@schema("dogs_service")
}
